{
  "name": "kontext-cli",
  "version": "1.1.0",
  "description": "A CLI tool for managing development profiles and automating shell environment switching",
  "main": "dist/cli/src/index.js",
  "bin": {
    "kontext": "dist/cli/src/index.js"
  },
  "scripts": {
    "build": "pnpm run build:core && pnpm run build:cli && pnpm run build:main",
    "build:core": "cd packages/core && pnpm run build",
    "build:cli": "cd packages/cli && pnpm run build",
    "build:main": "tsc",
    "dev": "tsx packages/cli/src/index.ts",
    "dev:build": "tsc --watch",
    "dev:run": "nodemon",
    "clean": "rm -rf dist && rm -rf packages/*/dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts",
    "format:check": "prettier --check packages/*/src/**/*.ts",
    "package": "pnpm run build && pkg dist/cli/src/index.js --out-path ./build --targets node18-macos-x64,node18-linux-x64,node18-win-x64",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "prepack": "pnpm run build",
    "install-deps": "pnpm install"
  },
  "keywords": [
    "cli",
    "development",
    "profile",
    "git",
    "environment",
    "shell",
    "configuration",
    "monorepo",
    "workspace"
  ],
  "author": "wangyeux@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangyedev/kontext"
  },
  "homepage": "https://github.com/wangyedev/kontext#readme",
  "bugs": {
    "url": "https://github.com/wangyedev/kontext/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0"
  }
}
